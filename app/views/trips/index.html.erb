<h1>My Trips</h1>


<div class="row">
  <div class="col-xs-6">
    <h3>Distance Biked (km) by Day</h3>
    <%= line_chart @distance_by_day %>
  </div>

  <table>
    <thead>
      <tr>
        <th>Trip ID</th>
       <th>Distance Traveled (km)</th>
       <th>Air Credit Earned</th>
       <th>Day</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @trips.each do |trip| %>
        <tr>
          <td><%= trip.id %></td>
          <td><%= trip.distance %></td>
          <td><%= trip.air_credit_earned %></td>
          <td><%= trip.created_at.strftime("%Y-%m-%d") %></td>
          <td> </td>
          <td><%= link_to 'View', trip %></td>
          <%#<%= link_to 'Edit', edit_trip_path(trip) %>

          <%#<%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p><strong>Total Distance: </strong> <%= @trips.sum(:distance) %> kilometers</p>
</div>




<div class="row">
  <div class="col-xs-6">
    <h3>Air Credit Earned by Day</h3>
    <%= column_chart @air_credit_by_day %>
  </div>
  <p><strong>Total Air Credit: </strong> <br><%= @trips.sum(:air_credit_earned  ) %> points</p>
</div>

