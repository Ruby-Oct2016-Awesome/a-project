<h1>Create a Team</h1>

<%= form_for @team do |f| %>
	<div class="form-group">
		<%= f.label 'Name of your team' %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>

	<%= f.hidden_field :user_id, :value => current_user.id %>
	<%= f.submit "Create Account", class: 'btn btn-secondary' %>
	<% end %>

<form action="teams_path" method="post">

</form>