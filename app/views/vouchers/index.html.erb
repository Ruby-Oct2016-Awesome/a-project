<% else %>
  <p class='center'>You currently have 0 AirCredit. <%= link_to "Learn how to get AirCredit to get free vouchers!", instructions_vouchers_path %> </p>
<% end %>
<div class='row'>
	<%= render partial: "vouchers", locals: {voucher: @vouchers}%>
</div>