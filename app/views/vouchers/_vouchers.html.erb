<% voucher.each do |t| %>
<div class="col-lg-4 col-sm-6">
<div class="card">
  <div class="card-block">
    <h4 class="card-title"><%= t.name %></h4>
    <p class="card-text"><%= t.voucher_type %></p>
    <p class="card-text">Total vouchers <%= t.quantity%></p>
    <p class="card-text">AirCredit: <%= t.aircredit_price %></p>
    <p class="card-text"><%= t.discount_info %></p>
    <p class="card-text"><%= t.description %></p>    
    <p class="card-text"><%= t.expired_at %></p>
    <% if current_user %>
	    <% unless current_user.air_credit < t.aircredit_price %>
        <div class="center">
	       <%= link_to 'Redeem', new_voucher_order_path(t), class: 'btn btn-primary' %>
        </div>
	    <% else %>
	    <p class="card-text">Not enough aircredit</p>
	    <% end %>
	  <% end %>
      <div class="center">
    <%= link_to 'Purchase without Aircredit', purchase_voucher_path(t), class: 'btn btn-primary'
    %>
    </div>
   </div>
</div>
</div>
<% end %>